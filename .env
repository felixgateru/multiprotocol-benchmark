## Users
MG_USERNAME=
MG_PASSWORD=

## Domains
## leave empty to auto-create
DOMAIN_ID=

## Channels
CHANNEL_COUNT=3 

## Clients
CLIENT_COUNT=3

## Urls
MG_USERS_URL=https://cloud.magistrala.absmach.eu/api
MG_DOMAINS_URL=https://cloud.magistrala.absmach.eu/api
MG_CLIENTS_URL=https://cloud.magistrala.absmach.eu/api
MG_CHANNELS_URL=https://cloud.magistrala.absmach.eu/api

## Logging
LOG_LEVEL=info

## MQTT
MQTT_BROKER_URL=tcp://messaging.magistrala.absmach.eu:1883
MQTT_TIMEOUT=120s
MQTT_MESSAGE_COUNT=1000
MQTT_MESSAGE_DELAY=5s
MQTT_MESSAGE_SIZE=256
MQTT_MESSAGE_FORMAT=text
MQTT_QOS=0

## COAP
COAP_SERVER_HOST=messaging.magistrala.absmach.eu
COAP_SERVER_PORT=5684
COAP_MESSAGE_COUNT=1000
COAP_MESSAGE_DELAY=1s
# Timeout must be greater than delay
COAP_TIMEOUT=30s
COAP_MESSAGE_SIZE=256

## HTTP
HTTP_SERVER_BASE_URL=https://messaging.magistrala.absmach.eu/api/http
HTTP_MESSAGE_COUNT=1000
HTTP_MESSAGE_DELAY=2s
# Timeout must be greater than delay
HTTP_TIMEOUT=30s
HTTP_MESSAGE_SIZE=256

## WS
WS_SERVER_BASE_URL=wss://messaging.magistrala.absmach.eu/api/ws
WS_MESSAGE_COUNT=1000
WS_MESSAGE_DELAY=2s
# Timeout must be greater than delay
WS_TIMEOUT=30s
WS_MESSAGE_SIZE=256

## TOML Config File
# leave empty to auto-generate
CONFIG_TOML=./provision.toml

SAVE_TO_FILE=false

## TLS Configuration
# Enable/disable TLS certificate verification (default: true)
TLS_VERIFY=true
# Path to custom CA certificate file (optional, leave empty to use system CAs)
CA_CERT_PATH=/etc/ssl/certs/ca-certificates.crt

## Protocol Selection
# Enable/disable specific protocols (default: all enabled)
RUN_MQTT=true
RUN_COAP=false
RUN_HTTP=false
RUN_WS=false